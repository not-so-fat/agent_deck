{
  "name": "@agent-deck/mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Agent Deck",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "start:simple": "node dist/simple-http-server.js",
    "dev:http": "tsx watch src/http-server.ts",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest --run"
  },
  "dependencies": {
    "@agent-deck/shared": "file:../shared",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "better-sqlite3": "^9.4.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
